    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'k4s-v2'",
            "env": {
                "LLVM_SYS_130_PREFIX": "/usr"
            },
            "cargo": {
                "args": [
                    "build",
                    "--bin=k4s",
                    "--package=k4s-v2"
                ],
                "filter": {
                    "name": "k4s",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'k4s-v2'",
            "env": {
                "LLVM_SYS_130_PREFIX": "/usr"
            },
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=k4s",
                    "--package=k4s-v2",
                    "--",
                    "--nocapture"
                ],
                "filter": {
                    "name": "k4s",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}